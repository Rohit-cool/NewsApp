<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ea474a</item>
        <item name="colorPrimaryVariant">#cf2a2d</item>
        <item name="colorOnPrimary">#1e344b</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#f9f9fa</item>
        <item name="colorSecondaryVariant">#4e4e4e</item>
        <item name="colorOnSecondary">#262626</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.NewsApp.Main" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryVariant">#000</item>
        <item name="colorOnPrimary">#000</item>
    </style>



    <style name="Theme.NewsApp.NoActionBAr">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="MyAppBarLayoutTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

</resources>